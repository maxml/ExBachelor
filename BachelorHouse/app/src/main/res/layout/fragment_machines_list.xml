<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.maxml.bachelorhouse.fragment.projects.MachinesFragment">

    <TextView
        android:id="@+id/machine_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/machines_no"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/machine_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/machine_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="false" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/machine_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_input_add" />

</RelativeLayout>
